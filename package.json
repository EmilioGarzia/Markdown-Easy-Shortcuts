{
  "name": "markdown-shortcuts",
  "displayName": "Markdown Shortcuts",
  "description": "Write easy markdown documents with shortcuts",
  "version": "0.0.1",
  "icon": "./icons/icon.png",
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Other",
    "Snippets"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configurationDefaults": {
      "[markdown]": {
        "editor.suggest.showWords":false,
        "editor.wordWrap": "on",
        "editor.quickSuggestions": {
          "comments": "on",
          "strings": "on",
          "other": "on"
        }
      }
    },
    "languages": [
      {
        "id": "markdown",
        "aliases": [
          "Markdown",
          "md"
        ],
        "extensions": [
          ".md",
          ".markdown"
        ]
      }
    ],
    "commands": [
      {
        "command": "markdown-shortcuts.bold",
        "title": "Markdown Shortcuts: Bold Text"
      },
      {
        "command": "markdown-shortcuts.italic",
        "title": "Markdown Shortcuts: Italic Text"
      },
      {
        "command": "markdown-shortcuts.toc",
        "title": "Markdown Shortcuts: Table of contents"
      },
      {
        "command": "markdown-shortcuts.update_toc",
        "title": "Markdown Shortcuts: Update table of contents"
      }
    ],
    "snippets": [
      {
        "language": "markdown",
        "path": "./snippets/snippets.code-snippets"
      }
    ],
    "keybindings": [
      {
        "command": "markdown-shortcuts.bold",
        "key": "ctrl+b",
        "mac": "cmd+b",
        "when": "editorTextFocus"
      },
      {
        "command": "markdown-shortcuts.italic",
        "key": "ctrl+i",
        "mac": "cmd+i",
        "when": "editorTextFocus"
      },
      {
        "command": "markdown-shortcuts.marker_item",
        "key": "alt+x",
        "mac": "alt+x",
        "when": "editorTextFocus"
      },
      {
        "command": "markdown-shortcuts.toc",
        "key": "ctrl+t",
        "mac": "cmd+t",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.88.0",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "os-name": "^6.0.0"
  }
}
