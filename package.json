{
  "name": "markdown-shortcuts",
  "displayName": "Markdown Shortcuts",
  "description": "Write easy markdown documents with shortcuts",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Other",
    "Snippets"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "markdown-shortcuts.bold",
        "title": "Markdown Shortcuts: Bold Text"
      },
      {
        "command": "markdown-shortcuts.italic",
        "title": "Markdown Shortcuts: Italic Text"
      }
    ],
    "snippets": [
      {
        "language": "markdown",
        "path": "./snippets/snippets.code-snippets"
      }
    ],
    "keybindings": [
      {
        "command": "markdown-shortcuts.bold",
        "key": "ctrl+b",
        "mac": "cmd+b",
        "when": "editorTextFocus"
      },
      {
        "command": "markdown-shortcuts.italic",
        "key": "ctrl+i",
        "mac": "cmd+i",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "[markdown]": {
        "editor.quickSuggestions": {
          "type": "boolean",
          "default": true,
          "description": "Abilita suggerimenti rapidi per Markdown"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.88.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9"
  }
}
